<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_comment_card"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="2dp"
    android:background="?colorTertiaryFixedDim"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        >

        <TextView
            android:id="@+id/recycler_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="\@sampleUsernameSuperLong"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/worm_skin"
            />

        <TextView
            android:id="@+id/recycler_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commented stuff"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/recycler_comment_username"
            android:layout_marginBottom="3dp"
            />

        <TextView
            android:id="@+id/recycler_comment_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="5 seconds ago"
            android:alpha=".5"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
